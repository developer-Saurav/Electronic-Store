<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        /* Include CSS here */
        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            /*background: #202124;*/
            font-family: "Poppins", sans-serif;
            color: #f9f9f9;
        }

        button {
            background: transparent;
            border: 0;
            padding: 0;
            cursor: pointer;
        }

        h2 {
            font-size: 16px;
            font-weight: 500;
            padding-left: 20px;
            margin: 22px 0;
        }

        .overlay {
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.6);
            backdrop-filter: blur(3px);
            opacity: 0;
            visibility: hidden;
            transition: 0.4s;
        }

        body.open .overlay {
            opacity: 1;
            visibility: visible;
        }

        .burger {
            position: fixed;
            z-index: 3;
            top: 20px;
            right: 12px;
            display: flex;
            align-items: center;
            gap: 6px;
        }

        @media (min-width: 500px) {
            .burger {
                display: none;
            }
        }

        .burger-avatar {
            width: 30px;
            height: 30px;
            transition: 0.4s;
        }

        body.open .burger-avatar {
            transform: translateX(40px);
            opacity: 0;
            visibility: hidden;
        }

        .burger-icon {
            display: block;
            width: 30px;
            height: 30px;
            background-image: url("./assets/icon-burger.svg");
            background-repeat: no-repeat;
            background-position: center center;
        }

        body.open .burger-icon {
            background-image: url("./assets/icon-close.svg");
        }

        .sidebar {
            position: fixed;
            z-index: 2;
            top: 0;
            left: 0;
            display: flex;
            align-items: center;
            flex-direction: column;
            width: 100%;
            height: 100%;
            padding: 40px 20px;
            background: #000000;
            opacity: 0;
            visibility: hidden;
            filter: blur(10px);
            transition-property: filter, visibility, opacity;
            transition-duration: 0.6s;
        }

        @media (min-width: 400px) {
            .sidebar {
                transform: translateX(100%);
                width: 180px;
                transition: 0.4s;
                border-left: 1px solid rgba(255, 255, 255, 0.16);
            }
        }

        @media (min-width: 500px) {
            .sidebar {
                transform: translateX(0);
                opacity: 1;
                visibility: visible;
                filter: blur(0);
            }
        }

        body.open .sidebar {
            transform: translateX(0);
            opacity: 1;
            visibility: visible;
            filter: blur(0);
        }

        .sidebar-avatar {
            width: 80px;
            height: 80px;
            margin-bottom: 20px;
        }

        .sidebar-username {
            margin: 0;
            font-size: 14px;
            font-weight: 500;
            color: rgba(255, 255, 255, 0.96);
        }

        .sidebar-role {
            margin: 0 0 20px;
            font-size: 9px;
            font-weight: 400;
            color: rgba(255, 255, 255, 0.57);
        }

        .sidebar-menu {
            display: grid;
            width: 100%;
            padding: 10px 0;
            padding-left: 20px;
            border-top: 1px solid rgba(255, 255, 255, 0.16);
        }

        @media (min-width: 350px) {
            .sidebar-menu {
                padding-left: 0;
            }
        }

        .sidebar-menu > a, .sidebar-menu > button {
            display: flex;
            gap: 8px;
            align-items: center;
            font-family: "Poppins", sans-serif;
            font-size: 16px;
            font-weight: 200;
            letter-spacing: 2px;
            line-height: 1;
            padding: 10px 20px;
            color: #f9f9f9;
            text-decoration: none;
        }

        .sidebar-menu > a > img, .sidebar-menu > button > img {
            width: 17px;
            height: 17px;
        }

        .sidebar-menu > a > span, .sidebar-menu > button > span {
            font-size: 11px;
            transform: translateY(1px);
        }

        .content-container {
            margin-left: 200px; /* Adjust this based on the width of your sidebar */
        }
    </style>
</head>
<body>
    <button type="button" class="burger" onclick="toggleSidebar()">
        <img src="images/charlesdeluvio-kVg2DQTAK7c-unsplash.jpg" />
        <span class="burger-icon"></span>
    </button>
    <div class="overlay"></div>
    <aside class="sidebar">
        <img class="sidebar-avatar" src="images/avatar.jpg" alt="Avatar" style="border-radius: 50%">
        <div class="sidebar-username">Admin</div>
        <div class="sidebar-role">Administrator</div>
        <nav class="sidebar-menu">
            <a href="Dashboard.aspx" class="nav-link active">
                <i class="fa-solid fa-chart-line"></i>
                <span>Dashboard</span>
            </a>
            <a href="ManageItems.aspx" class="nav-link">
                <i class="fa-thin fa-user-secret"></i>
                <span>Manage Items</span>
            </a>
            <a href="ManageUsers.aspx" class="nav-link">
                <i class="fa-thin fa-user-secret"></i>
                <span>Manage Users</span>
            </a>
        </nav>
        <nav class="sidebar-menu bottom">
            <a href="AdminLogin.aspx" class="nav-link active">
                <i class="fa-thin fa-sign-out"></i> <!-- Add appropriate icon -->
                <span>Sign Out</span>
            </a>
        </nav>
    </aside>

    <div class="content-container">
        <form id="form1" runat="server">
            <div class="container">
                <asp:ContentPlaceHolder ID="ContentPlaceHolder1" runat="server"></asp:ContentPlaceHolder>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript">
        const toggleSidebar = () => document.body.classList.toggle("open");
    </script>
</body>
</html>
